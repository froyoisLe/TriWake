<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="site.isleti.triwake">

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".util.TriWakeApplication"
        android:allowBackup="true"
        android:appComponentFactory="."
        android:icon="@mipmap/ic_triwake"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme,android:allowBackup,android:appComponentFactory">
        <activity android:name=".ui.todo.AddTodosActivity"></activity>
        <activity
            android:name=".ui.Intros.UpdateIntrosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.Intros.AddIntrosActivity"
            android:label="吾日三省吾身"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.account.AddRecordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.diary.UpdateDiaryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.diary.DiaryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.diary.AddDiaryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.todo.UpdateTodosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.notes.UpdateNoteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.notes.AddNotesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.painting.DrawActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.painting.SaveActvity"
            android:screenOrientation="portrait" />
    </application>

</manifest>