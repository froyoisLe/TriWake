<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Intros.UpdateIntrosActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/intros_dark"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/update_intro_iv_back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:src="@drawable/ic_keyboard_backspace_white_24dp" />
            <TextView
                android:id="@+id/update_intro_tv_title"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="编 辑 内 容"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/intro_uuid"
                android:layout_width="50dp"
                android:text="6666666666"
                android:textColor="#00000000"
                android:layout_height="30dp"
                />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="5dp"
        android:background="@color/intros_lighter"
        >

        <TextView
            android:id="@+id/intro_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/blue_grey_inactive"
            android:text="编辑今天的反思" />

        <site.isleti.triwake.widget.LinedEditText
            android:id="@+id/intro_update_content"
            android:layout_gravity="top"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:paddingBottom="8dp"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:background="@drawable/shape_add_diary_title"
            android:elevation="8dp"
            android:enabled="true"
            android:gravity="top"
            android:lineSpacingExtra="5dp"
            android:minLines="18"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:scrollbars="vertical"
            android:textSize="17sp"
            />

        <LinearLayout
            android:paddingTop="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:weightSum="3"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/update_intro_fab_back"
                    android:elevation="3dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="@dimen/diary_icon_size"
                    android:layout_height="@dimen/diary_icon_size"
                    android:src="@drawable/ic_undo_black_24dp"
                    android:background="@drawable/bg_intro_fab"
                    android:scaleType="fitCenter"
                    />



                <ImageButton
                    android:elevation="3dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"


                    android:id="@+id/update_intro_fab_delete"
                    android:layout_width="@dimen/diary_icon_size"
                    android:layout_height="@dimen/diary_icon_size"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:background="@drawable/bg_intro_fab"
                    android:scaleType="fitCenter"
                    />

                <ImageButton
                    android:elevation="3dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/update_intro_fab_add"
                    android:layout_width="@dimen/diary_icon_size"
                    android:layout_height="@dimen/diary_icon_size"
                    android:src="@drawable/ic_done_black_24dp"
                    android:background="@drawable/bg_intro_fab"
                    android:scaleType="fitCenter"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
