<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_ll"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="16dp"
              android:paddingRight="10dp"
              android:background="@color/diary_light"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:paddingLeft="10.8dp"
        android:background="@color/diary_light"
        >

        <ImageView
            android:id="@+id/main_iv_circle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@color/diary_light"
            android:paddingTop="2dp"
            android:src="@drawable/ic_diary_tag1" />

        <TextView
            android:textIsSelectable="true"
            android:background="@drawable/bg_title_text"
            android:id="@+id/main_tv_date"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            android:textColor="@color/diary_dark"
            android:text="2017年01月18日"
            android:textSize="14sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/diary_light"
        >

        <LinearLayout
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:background="@drawable/linear_style"
            >
        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_ll_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/diary_light"
            >




            <com.ms.square.android.expandabletextview.ExpandableTextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/expand_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                expandableTextView:maxCollapsedLines="5"
                expandableTextView:animDuration="300">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:id="@+id/main_ll_title"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:background="@color/diary_light"
                        >
                        <TextView
                            android:textIsSelectable="true"
                            android:background="@color/diary_light"
                            android:id="@+id/main_tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:text="这里是标题"
                            android:textColor="#666666"
                            android:textSize="19sp"
                            />

                    </LinearLayout>

                    <TextView
                        android:textIsSelectable="true"
                        android:layout_below="@id/main_ll_title"
                        android:layout_gravity="center"
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:textColor="#666666" />
                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:background="@android:color/transparent"/>
                </RelativeLayout>

            </com.ms.square.android.expandabletextview.ExpandableTextView>

            <LinearLayout
                android:id="@+id/item_rl_edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingRight="5dp"
                android:orientation="horizontal"
                android:gravity="right"
                android:background="@color/diary_light"
                >

                <ImageView
                    android:id="@+id/main_iv_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_border_color_red_200_24dp"
                    />
                <ImageView
                    android:id="@+id/main_iv_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_delete_black_24dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:background="@color/diary_light"
                android:layout_width="match_parent"
                android:layout_height="20dp">

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
























