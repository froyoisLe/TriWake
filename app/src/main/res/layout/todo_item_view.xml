<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todo_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="16dp"
    android:background= "@color/todo_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:paddingLeft="10.8dp"
        android:background="@color/todo_bg"
        >
            <ImageView
                android:clickable="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/todo_state_undone"
                android:layout_gravity="center_vertical"
                android:background="@color/todo_lighter"
                android:src="@drawable/ic_check_box_24dp" />

            <ImageView
                android:clickable="true"
                android:id="@+id/todo_state_done"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/todo_lighter"
                android:src="@drawable/ic_check_done_24dp" />
        <TextView
            android:id="@+id/todo_date_item"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:textColor="@color/todo_state_grey"
            android:text="2019年01月18日"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/clicn"
            android:text="0"
            android:visibility="invisible"
            android:paddingLeft="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="6dp"
            android:id="@+id/todo_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:background="@drawable/todo_linear_style"></LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/todo_item_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/todo_bg"
            android:weightSum="10"
            >

            <TextView
                android:textIsSelectable="true"
                android:layout_weight="7"
                android:id="@+id/todo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="待办事项名称"
                android:textColor="@color/todo_darker"
                android:textSize="19sp"
                />
            <LinearLayout
                android:layout_weight="8"
                android:orientation="horizontal"
                android:background="@color/todo_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/todo_uuid"
                    android:layout_weight="6"
                    android:textColor="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/todo_iv_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_border_color_red_200_24dp"
                    />
                <ImageView
                    android:id="@+id/todo_iv_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_delete_black_24dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"></LinearLayout>


        </LinearLayout>

    </LinearLayout>













</LinearLayout>


























