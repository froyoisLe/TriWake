<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/common_title_ll"
        android:background="@color/diary_dark"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/update_diary_iv_back"
            android:paddingLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_keyboard_backspace_white_24dp"
            />
        <TextView
            android:id="@+id/common_tv_title"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编辑日记"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/common_iv_test"
            android:layout_width="50dp"
            android:layout_height="30dp"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/update_diary_tv_tag"
        android:layout_width="0.001dp"
        android:layout_height="0.001dp"
        android:text="133546465"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:background="@color/diary_lighter"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="20dp"
            >

            <TextView
                android:id="@+id/update_diary_tv_date"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:text="今天，2019年01月19日"
                android:textColor="@color/diary_dark"
                android:textSize="15sp"
                />



            <EditText
                android:elevation="3dp"
                android:id="@+id/update_diary_et_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_add_diary_title"
                android:enabled="true"
                android:gravity="center"
                android:maxLines="10"
                android:minLines="8"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:scrollbars="vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <site.isleti.triwake.widget.LinedEditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/update_diary_et_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/shape_add_diary_title"
                android:enabled="true"
                android:gravity="top"
                android:elevation="6dp"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:scrollbars="vertical"
                android:textSize="17sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:layout_height="65dp">
                <ImageButton
                    android:elevation="3dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:id="@+id/update_diary_fab_back"
                    android:layout_width="@dimen/diary_icon_size"
                    android:layout_height="@dimen/diary_icon_size"
                    android:src="@drawable/ic_undo_black_24dp"
                    android:background="@drawable/diary_bg_fab"
                    android:scaleType="fitCenter"
                    />
                <ImageButton
                    android:elevation="3dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:id="@+id/update_diary_fab_delete"
                    android:layout_width="@dimen/diary_icon_size"
                    android:layout_height="@dimen/diary_icon_size"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:background="@drawable/diary_bg_fab"
                    android:scaleType="fitCenter"
                    />
                <ImageButton
                    android:elevation="3dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:id="@+id/update_diary_fab_add"
                    android:layout_width="@dimen/diary_icon_size"
                    android:layout_height="@dimen/diary_icon_size"
                    android:src="@drawable/ic_done_black_24dp"
                    android:background="@drawable/diary_bg_fab"
                    android:scaleType="fitCenter"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>